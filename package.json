{
  "name": "vscode-zotero",
  "displayName": "VSCode Zotero",
  "description": "An extension to insert reference from Zotero library and add them to a bib file.",
  "version": "1.1.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zotero.searchLibrary",
        "title": "Zotero: Search Library"
      },
      {
        "command": "zotero.openItem",
        "title": "Zotero: Open Citation Item Under Cursor"
      }
    ],
    "keybindings": [
      {
        "command": "zotero.searchLibrary",
        "key": "ctrl+alt+r",
        "mac": "ctrl+cmd+r"
      },
      {
        "command": "zotero.openItem",
        "key": "ctrl+alt+o",
        "mac": "ctrl+cmd+o"
      }
    ],
    "configuration": {
      "title": "Zotero",
      "properties": {
        "zotero.zoteroDbPath": {
          "type": "string",
          "default": "~/Zotero/zotero.sqlite",
          "description": "Path to Zotero database file"
        },
        "zotero.betterBibtexDbPath": {
          "type": "string",
          "default": "~/Zotero/better-bibtex.sqlite",
          "description": "Path to Better BibTeX database file"
        },
        "zotero.betterBibtexTranslator": {
          "type": "string",
          "default": "Better BibLaTeX",
          "enum": ["Better BibTeX", "Better BibLaTeX"],
          "description": "Better BibTeX translator to use for exporting entries"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "sql.js": "^1.13.0"
  },
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jinvim/vscode-zotero.git"
  },
  "publisher": "jinvim"
}
